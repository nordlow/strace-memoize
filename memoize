#!/usr/bin/env python3

import sys
import os
import os.path
import re
import hashlib
import tempfile
import pickle                   # cPickle no available in Python3

from pprint import pprint as pp
from getopt import getopt

from dbgio import dln

# if set use modification time instead of content-hash as indentity
OPT_USE_MODTIME = False

SYS_CALLS = ["open", "openat", "stat", "stat64", "statfs", "access"]
SYS_CALLS_AT = ["openat"]       # Linux

# content hashing algorithm
HASH_NAME = 'sha1'

def memoize(cmd):
    print("cmd:", cmd)


if __name__ == '__main__':

    (opts, cmd) = getopt(sys.argv[1:], 'td:')
    cmd = ' '.join(cmd)

    for (opt, value) in opts:
        if opt == '-t':
            OPT_USE_MODTIME = True
        elif opt == '-d':
            RELEVANT_DIRS.append(value)

    status = memoize(cmd)
    sys.exit(status)
